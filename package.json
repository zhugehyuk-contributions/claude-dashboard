{
  "name": "claude-dashboard",
  "version": "1.5.0",
  "type": "module",
  "description": "Comprehensive status line with context usage, API rate limits, and cost tracking",
  "main": "dist/index.js",
  "scripts": {
    "build": "node scripts/build.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:manual": "echo '{\"model\":{\"display_name\":\"Opus\"},\"context_window\":{\"context_window_size\":200000,\"current_usage\":{\"input_tokens\":50000,\"cache_creation_input_tokens\":0,\"cache_read_input_tokens\":0}},\"cost\":{\"total_cost_usd\":0.5}}' | node dist/index.js"
  },
  "keywords": [
    "claude-code",
    "statusline",
    "context",
    "rate-limits",
    "i18n"
  ],
  "author": "uppinote",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.16"
  }
}
